{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./lib",
        "rootDir": "./src",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": false,
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "stripInternal": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "typeRoots": ["./node_modules/@types", "./src/typings"],
        "types": ["node", "jest"],
    },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
