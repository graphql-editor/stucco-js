{
    "compileOnSave": false,
    "compilerOptions": {
        "strict":true,
        "baseUrl": ".",
        "outDir": "./",
        "rootDir": "./",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "module": "es2020",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "stripInternal": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2020",
        "typeRoots": ["./node_modules/@types", "./src/typings"],
        "types": ["node", "jest"]
    },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}
